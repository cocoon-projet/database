{
  "name": "cocoon-projet/database",
  "description": "ORM PHP simplifié et léger",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Pichot Franck",
      "email": "contact@cocoon-projet.fr",
      "role": "Developer"
    }
  ],
  "autoload": {
    "psr-4": {
      "Cocoon\\": "src/Cocoon/",
      "App\\": "app/"
    }
  },
  "bin": [
    "bin/cocoon"
  ],
  "require": {
    "php": "^8.0",
    "cocoon-projet/utilities": "^0.0.1",
    "league/flysystem": "^3.29",
    "cocoon-projet/pagination": "^0.0.4",
    "cocoon-projet/collection": "^0.0.4",
    "symfony/console": "^6.0"
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^9",
    "php-coveralls/php-coveralls": "^2.1",
    "tracy/tracy": "^2.10",
    "squizlabs/php_codesniffer": "^3.13"
  },
  "scripts": {
    "test": ["vendor/bin/phpcbf",
            "vendor/bin/phpcs"]
  },
  "config": {
    "bin-dir": "bin"
  }
}
